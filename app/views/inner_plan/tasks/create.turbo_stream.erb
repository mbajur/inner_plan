<turbo-stream action="append" target="<%= dom_id(@list, :ongoing_tasks) %>">
  <template>
    <%= render(InnerPlan::Tasks::RowComponent.new(@task)) %>
  </template>
</turbo-stream>

<turbo-stream action="update" target="<%= dom_id(@list, :add_task) %>">
  <template>
    <%= render partial: 'inner_plan/tasks/inline_form', formats: [:html], locals: { list: @list, task: InnerPlan::Task.new, form_visible: true } %>
  </template>
</turbo-stream>
