<header class="mb-3">
  <nav aria-label="breadcrumb" style="--bs-breadcrumb-divider: 'â€º';">
    <ol class="breadcrumb justify-content-center mb-0">
      <li class="breadcrumb-item text-body-tertiary"><a href="<%= root_path %>" class="text-reset">Home</a></li>
      <li class="breadcrumb-item text-body-tertiary" aria-current="page"><%= link_to @task.group.list.title, @task.group.list, class: 'text-reset' %></li>

      <% unless @task.group.default? %>
        <li class="breadcrumb-item active text-body-tertiary" aria-current="page"><%= link_to @task.group.title, @task.group, class: 'text-reset' %></li>
      <% end %>

      <li class="breadcrumb-item active text-body-tertiary" aria-current="page">Task #<%= @task.id %></li>
    </ol>
  </nav>
</header>

<%= form_with model: @task do |f| %>
  <div class="d-flex mb-2">
    <div class="text-end me-3">
      <%= content_tag :a, style: 'display:block; margin-top: -0.2rem; margin-left: -1rem', data: { turbo: true, turbo_stream: true } do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" width="39" height="39" stroke-width="1">
          <path d="M3 3m0 2a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v14a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z"></path>
        </svg>
      <% end %>
    </div>

    <div>
      <h1 class="h3"><%= @task.title %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-4">
      <div class="d-flex mt-4">
        <div class="me-3 text-body-tertiary" style="margin-top:-0.2rem">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" width="24" height="24" stroke-width="2">
            <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"></path>
            <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"></path>
          </svg>
        </div>

        <div>
          <h6>Assigned to</h6>

          Mike B.
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="d-flex mt-4">
        <div class="me-3 text-body-tertiary" style="margin-top:-0.2rem">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" width="24" height="24" stroke-width="2">
            <path d="M10.5 21h-4.5a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v3"></path>
            <path d="M16 3v4"></path>
            <path d="M8 3v4"></path>
            <path d="M4 11h10"></path>
            <path d="M18 18m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"></path>
            <path d="M18 16.5v1.5l.5 .5"></path>
          </svg>
        </div>

        <div>
          <h6>Due on</h6>

          12 Aug 2024
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="d-flex mt-4">
        <div class="me-3 text-body-tertiary" style="margin-top:-0.2rem">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" width="24" height="24" stroke-width="2">
            <path d="M10 5a2 2 0 1 1 4 0a7 7 0 0 1 4 6v3a4 4 0 0 0 2 3h-16a4 4 0 0 0 2 -3v-3a7 7 0 0 1 4 -6"></path>
            <path d="M9 17v1a3 3 0 0 0 6 0v-1"></path>
          </svg>
        </div>

        <div>
          <h6>When done, notify</h6>

          Mike B.
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex mt-4">
    <div class="me-3 text-body-tertiary" style="margin-top:-0.2rem">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" width="24" height="24" stroke-width="2">
        <path d="M14 3v4a1 1 0 0 0 1 1h4"></path>
        <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"></path>
        <path d="M9 9l1 0"></path>
        <path d="M9 13l6 0"></path>
        <path d="M9 17l6 0"></path>
      </svg>
    </div>

    <div class="pe-4">
      <h6>Description</h6>

      <turbo-frame id="<%= dom_id(@task, :description) %>">
        <a href="<%= edit_task_path(@task) %>" class="<%= class_names('text-decoration-none', 'text-body-tertiary' => @task.description.blank?, 'text-reset' => @task.description.present?) %>">
          <% if @task.description.present? %>
            <%= @task.description %>
          <% else %>
            Click to add description...
          <% end %>
        </a>
      </turbo-frame>
    </div>
  </div>
<% end %>
